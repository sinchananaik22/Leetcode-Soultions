def nth_root(x: int, n: int) -> int:
    """
    Finds the integer part of the n-th root of x using binary search.
    """
    if x == 0 or x == 1:
        return x
    
    low, high = 1, x
    
    while low <= high:
        mid = (low + high) // 2
        power = mid ** n
        
        if power == x:
            return mid
        elif power < x:
            low = mid + 1
        else:
            high = mid - 1
    
    return high  # high is the integer part of the nth root

# Example usage:
print(nth_root(27, 3))  # Output: 3
print(nth_root(16, 4))  # Output: 2
print(nth_root(10, 3))  # Output: 2
